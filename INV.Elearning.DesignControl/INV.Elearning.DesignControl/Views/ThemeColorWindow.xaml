                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
                    <StackPanel.Background>
                        <SolidColorBrush Color="{Binding ElementName=light_2, Path=SelectedColor.Color}" />
                    </StackPanel.Background>
                    <TextBlock Margin="10" TextAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Text="{DynamicResource TCW_Text}">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding ElementName=dark_1, Path=SelectedColor.Color}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                    <Rectangle Width="28" Height="24" StrokeThickness="1.5" RadiusX="1" RadiusY="1" Margin="0,0,-10,0">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                <GradientStop Color="{Binding ElementName=accent_1, Path=SelectedColor.Color}" Offset="1"/>
                                <GradientStop Color="White" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                        <Rectangle.Stroke>
                            <SolidColorBrush Color="{Binding ElementName=accent_1, Path=SelectedColor.Color}" />
                        </Rectangle.Stroke>
                    </Rectangle>
                    <Ellipse Width="24" Height="24" StrokeThickness="1.5" Margin="-20,-15,0,0">
                        <Ellipse.Stroke>
                            <SolidColorBrush Color="{Binding ElementName=accent_1, Path=SelectedColor.Color}" />
                        </Ellipse.Stroke>
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding ElementName=light_1, Path=SelectedColor.Color}" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" RenderOptions.EdgeMode="Aliased">
                        <Rectangle Width="10" Height="10" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_1, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="10" Height="20" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom" Margin="-1,0,0,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_2, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="10" Height="30" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom" Margin="-1,0,0,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_3, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="10" Height="25" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom" Margin="-1,0,0,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_4, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="10" Height="15" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom" Margin="-1,0,0,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_5, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="10" Height="10" StrokeThickness="1" Stroke="Black" VerticalAlignment="Bottom" Margin="-1,0,0,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding ElementName=accent_6, Path=SelectedColor.Color}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </StackPanel>
                    <Rectangle RenderOptions.EdgeMode="Aliased" StrokeThickness="1" Fill="Black" Stretch="Fill" Width="70" Height="1" Margin="0,-1"/>
                    <TextBlock Margin="0,10,0,0" Text="{DynamicResource TCW_Hyperlink}" TextDecorations="Underline" TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding ElementName=hyperlink, Path=SelectedColor.Color}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Margin="0,0,0,10" Text="{DynamicResource TCW_Hyperlink}" TextDecorations="Underline" TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding ElementName=followedHyperlink, Path=SelectedColor.Color}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Margin="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Target="{Binding ElementName=txtName}" Content="{DynamicResource TCW_Name}" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="txtName" Padding="2" VerticalAlignment="Center" BorderBrush="Gray" Margin="5" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThemeColorWindow}, Path=Colors.Name, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
    <control:ElearningWindow.Fotters>
        <Button Content="{DynamicResource TCW_Reset}" Width="80" Height="32" HorizontalAlignment="Left" Margin="20,0" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ResetCommand}"/>
        <Button Content="{DynamicResource TCW_Save}" Width="80" Height="32" HorizontalAlignment="Right" Margin="120,0" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=SaveCommand}"/>
        <Button Content="{DynamicResource TCW_Cancel}" Width="80" Height="32" HorizontalAlignment="Right" Margin="20,0" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=CancelCommand}"/>
    </control:ElearningWindow.Fotters>
</control:ElearningWindow>
